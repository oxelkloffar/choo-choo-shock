{
  "name": "choo_choo",
  "version": "0.1.0",
  "bin": {
    "choo_choo": "bin/choo_choo.js"
  },
  "scripts": {
    "build": "echo \"The build step is not required when using JavaScript!\" && exit 0",
    "cdk": "cdk",
    "test": "jest",
    "ci_diff": "cdk diff -c env=${ENV:-stg} 2>&1 | sed -r 's/\\x1B\\[([0-9]{1,2}(;[0-9]{1,2})?)?[mGK]//g' || true",
    "ci_deploy": "cdk deploy -c env=${ENV:-stg} --require-approval never"
  },
  "devDependencies": {
    "@aws-cdk/assert": "^1.22.0",
    "aws-cdk": "^1.22.0",
    "jest": "^24.9.0"
  },
  "dependencies": {
    "@aws-cdk/aws-certificatemanager": "^1.22.0",
    "@aws-cdk/aws-ec2": "^1.22.0",
    "@aws-cdk/aws-ecs": "^1.22.0",
    "@aws-cdk/aws-ecs-patterns": "^1.22.0",
    "@aws-cdk/aws-elasticloadbalancingv2": "^1.22.0",
    "@aws-cdk/aws-route53": "^1.22.0",
    "@aws-cdk/core": "^1.22.0"
  }
}
